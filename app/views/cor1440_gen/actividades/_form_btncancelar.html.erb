
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
  modelos_path(@registro), :class => 'btn',
  :data => { 
    :confirm => 'Al cancelar se perderán sus cambios. ¿Está seguro(a)?',
    'turbo-method' => 'cancel'
   }
%>
<%= button_to t('.destroy', :default => t("helpers.links.destroy")),
  modelo_path(@registro), :class => 'btn btn-danger',
  method: :delete,
  :data => { 
    :confirm => 
    t('.confirm', 
      :default => t("helpers.links.confirm", 
                    :default => '¿Está seguro(a)?'
                   )
     ),
     'turbo-method' => 'delete'
   }
%>
