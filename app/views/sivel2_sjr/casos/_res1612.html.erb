<div class="accordion" id="acordeon-res1612" data-controller="res1612">
  <div class="accordion-item ">
    <div class="accordion-header mb-0 " id="enc_res1612">

      <fieldset class="form-group radio_buttons optional caso_casosjr_ninosdelconflicto">
