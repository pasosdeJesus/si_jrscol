<% sel = [] %>
<% if params && params[:filtro] && 
    params[:filtro][:busterritorial] %>
  <% sel = params[:filtro][:busterritorial] %>
<% end %>
<%= f.input :busterritorial,
  collection: ::Territorial.order('nombre'),
  label_method: :nombre,
  value_method: :id,
  include_hidden: false,
  selected: sel,
  input_html: { 
    class: "tom-select", 
    multiple: true, 
    'data-enviarautomatico' => ''
  },
  label: false
%>
