              style="overflow-x:scroll">

           <h6>Actos de violencia contra menores de edad</h4>
           <div id= "actosninos">
             <%= render partial: 'actosninos', locals: {f: f, s: s} %>
           </div>

         </div>
    </div>
  </div>
