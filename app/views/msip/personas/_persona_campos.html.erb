    <%= fvictima.input :edad, as: :integer %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= f.association :pais,
      collection: Msip::Pais.habilitados,
      label_method: :nombre,
      value_method: :id %>
  </div>
  <div class="col-md-6">
    <%= f.association :departamento,
      collection: (Msip::Departamento.habilitados.where(
        pais_id: f.object.pais_id)),
       label_method: :nombre,
       value_method: :id %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= f.association :municipio, 
      collection: (Msip::Municipio.habilitados.
                   where(departamento_id: f.object.departamento_id)), 
    label_method: :nombre, value_method: :id %>
  </div>
  <div class="col-md-6">
    <%= f.association :centropoblado,
      collection: (Msip::Centropoblado.habilitados.where(
        municipio_id: f.object.municipio_id)),
       as: :hidden,
       label_method: :nombre,
       value_method: :id %>
