<div class="page-header">
  <h1>Beneficiarios repetidos</h1>
</div>


<%= simple_form_for Sip::Reporterepetido.new, 
  :url => main_app.beneficiarios_repetidos_path,
  :html => { :class => 'form-horizontal' } do |f| 
%>
  <div data-role="content" class="form-inputs">
    <div id="errores">
      <% if f.object.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-error">
            El formulario tiene 
            <%= pluralize(f.object.errors.count, "error") %>.
          </div>
          <ul>
            <% f.object.errors.full_messages.each do |msg| %>
              <li>* <%= msg %></li>
            <% end %>
          </ul>
        </div> <!-- error-explanation -->
      <% end %>
      <%= f.error_notification %>
    </div> <!-- errores -->
    <div class="container">
      <div class="row filtro-fila">
        <div class="offset-sm-0 col-sm-2 offset-md-1 col-md-1">
          <%= @rango_fechas %>
        </div>
        <div class="offset-sm-0 col-sm-4">
          <% fpred = Sip::FormatoFechaHelper.inicio_semestre(Date.today) %>
          <%= f.input :fechaini,
            maxlength: 10, 
            size: 10,
            label: false,
            placeholder: 'Inicial',
            input_html: {
              "data-behaviour" => "datepicker",
              value: (params[:reporterepetidos] ? 
                      params[:reporterepetidos][:fechaini] :
                      Sip::FormatoFechaHelper.fecha_estandar_local(fpred)
                     )
            }
          %>
        </div>
        <div class="offset-sm-1 col-sm-4">
          <%= f.input :fechafin,
            maxlength: 10, 
            size: 10,
            label: false,
            placeholder: 'Final',
            input_html: {
              "data-behaviour" => "datepicker",
              value: params[:reporterepetidos] ? 
                params[:reporterepetidos][:fechafin] : ''
            }
          %>
        </div>
      </div> <!-- row -->

      <!--%= render 'restofiltro', {f: f} %-->

      <div class="row filtro-fila">
        <div class="offset-md-5 col-md-2">
          <%= f.button :submit, 'Filtrar', class: 'btn btn-default',
            'data-turbo' => false %>
        </div>
      </div> <!-- class: row -->

    </div>  <!-- class:container -->
  </div> <!-- class:form-inputs -->
<% end %>

<div id="repetidos">
  <%= render 'resultado_repetidos' %>
</div> <!-- id: resultado -->

<h2>Unificar dos beneficiarios por números de identificación</h2>

<%= simple_form_for Sip::Unificar.new, 
  :url => main_app.beneficiarios_unificar_path,
  :html => { :class => 'form-horizontal' } do |f| 
%>
  <div data-role="content" class="form-inputs">
    <div class="container">
      <div class="row filtro-fila">
        <div class="offset-sm-1 col-sm-3">
          <%= f.input :id1,
            maxlength: 10, 
            size: 10,
            label: false,
            placeholder: 'Id. del primer beneficiario'
          %>
        </div>
        <div class="offset-sm-1 col-sm-3">
          <%= f.input :id2,
            maxlength: 10, 
            size: 10,
            label: false,
            placeholder: 'Id. del segundo beneficarioFinal'
          %>
        </div>
        <div class="offset-md-1 col-md-3">
          <%= f.button :submit, 'Unificar', class: 'btn btn-default',
            'data-turbo' => false %>
        </div>
      </div> <!-- class: row -->
      <div>Advertencia: al unificar dos beneficiarios se completará
        la información del que tenga código menor (con los datos
        del otro beneficiario) y se eliminará el beneficiario con
        código mayor.
      </div>

    </div>  <!-- class:container -->
  </div> <!-- class:form-inputs -->
<% end %>


