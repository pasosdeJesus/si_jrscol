          <input type="hidden" name="caso[casosjr_attributes][ninosdelconflicto]" value="" autocomplete="off">
          <input 
             class="form-check-input radio_buttons optional msip-sf-bs-input" 
             data-action="change->res1612#cambiar" 
             type="radio" 
             value="true" 
             name="caso[casosjr_attributes][ninosdelconflicto]" 
             id="caso_casosjr_attributes_ninosdelconflicto_true">
