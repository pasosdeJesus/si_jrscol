<% @contarb_apf = Cor1440Gen::Actividadpf.all %>
<% if @contarb_pfid %>
  <% @contarb_apf = @contarb_apf.where(
    'proyectofinanciero_id IN (?)', @contarb_pfid) %>
<% end %>
<%= f.input :actividadpf_id,
  collection: @contarb_apf,
  label_method: :presenta_nombre,
  value_method: :id,
  label: false,
  include_blank: Cor1440Gen::Actividad.human_attribute_name(
    :actividadpf
  ),
  selected: @contarb_actividadpfid,
  input_html: {
    class: 'chosen-select',
    multiple: true
  }
%>

