        <%= f.simple_fields_for :docidsecundario, 
          child_index: params[:index] do |subf| %>
          <%= render partial: 'docidsecundario_campos', locals: {f: subf} %>
        <% end %>
      </div>
    </div>

    <div class="enlace-agregar-docidsecundario">
