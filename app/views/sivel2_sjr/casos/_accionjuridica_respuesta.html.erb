<table class='table table-bordered table-sm' border=1 width="100%">
  <thead>
    <tr>
      <th>Acción jurídica</th>
      <th>Favorable</th>
      <th></th>
    </tr>
  </thead>
  <tbody id="accionesjuridicasprespuesta">
    <%= f.simple_fields_for :accionjuridica_respuesta do |ar| %>
      <%= render 'accionjuridica_respuesta_campos', :f => ar %>
    <% end %>
